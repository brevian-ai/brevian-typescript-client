{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "es2022",
      "es2017",
      "es2021",
      "DOM"
    ],
    "module": "commonjs",
    "target": "es2018",
    "rootDir": "src/", /* Specify the root folder within your source files. */
    /* Interop Constraints */
    "esModuleInterop": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "outDir": "dist/",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
