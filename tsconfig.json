{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    // "types": [
    //   "@types/node",
    // ],
    "module": "commonjs",
    "target": "ESNext",
    "rootDir": "src/", /* Specify the root folder within your source files. */
    /* Interop Constraints */
    "esModuleInterop": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "outDir": "dist/",
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]

}
